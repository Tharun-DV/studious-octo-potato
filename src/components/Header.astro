---
import ThemeToggle from './ThemeToggle.astro';
---

<header class="header">
  <div class="container">
    <div class="header-content">
      <h1 class="logo">
        <a href="/">
          <span class="bracket">[</span>
          M1NDB3ND3R
          <span class="bracket">]</span>
        </a>
      </h1>
      <div class="header-right">
        <nav class="nav">
          <a href="/">Home</a>
          <a href="/blog">Blog</a>
          <a href="https://dv08.in" target="_blank" rel="noopener noreferrer">About</a>
        </nav>
        <ThemeToggle />
      </div>
    </div>
  </div>
</header>

<style>
  .header {
    background-color: rgba(0, 0, 0, 0.9);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--border-color);
    position: sticky;
    top: 0;
    z-index: 100;
    transition: all 0.3s ease;
  }

  :global([data-theme="light"]) .header {
    background-color: rgba(255, 255, 255, 0.95) !important;
    border-bottom-color: var(--border-color);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
  }

  .header-right {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .logo {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0;
  }

  .logo a {
    border: none;
    transition: all 0.3s ease;
    color: var(--text-primary);
  }

  .logo a:hover {
    color: var(--text-secondary);
  }

  .bracket {
    color: var(--text-muted);
    font-weight: 300;
  }

  .nav {
    display: flex;
    gap: 2rem;
  }

  .nav a {
    font-weight: 500;
    padding: 0.5rem 0;
    position: relative;
    transition: all 0.3s ease;
    color: var(--text-primary);
  }

  .nav a::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 1px;
    background-color: var(--accent-color);
    transition: width 0.3s ease;
  }

  .nav a:hover::after {
    width: 100%;
  }

  .nav a:hover {
    color: var(--accent-color);
  }

  @media (max-width: 768px) {
    .header-content {
      flex-direction: column;
      gap: 1rem;
    }

    .header-right {
      width: 100%;
      justify-content: space-between;
    }

    .nav {
      gap: 1rem;
    }

    .logo {
      font-size: 1.25rem;
    }
  }
</style>