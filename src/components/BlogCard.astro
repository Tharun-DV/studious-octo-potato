---
import { calculateReadingTime, formatReadingTime } from '../utils/readingTime';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  tags: string[];
  slug: string;
  isProtected: boolean;
  content?: string;
}

const { title, description, pubDate, tags, slug, isProtected, content = '' } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

const readingTime = content ? calculateReadingTime(content) : 0;
---

<article class="blog-card">
  <div class="blog-card-header">
    <h2 class="blog-card-title">
      <a href={`/blog/${slug}`}>
        {title}
        {isProtected && <span class="protected-icon">ðŸ”’</span>}
      </a>
    </h2>
    <div class="blog-card-meta">
      <time class="blog-card-date">{formattedDate}</time>
      {readingTime > 0 && (
        <span class="blog-card-reading-time">{formatReadingTime(readingTime)}</span>
      )}
    </div>
  </div>
  
  <p class="blog-card-description">{description}</p>
  
  <div class="blog-card-footer">
    <div class="blog-card-tags">
      {tags.map(tag => (
        <span class="blog-card-tag">{tag}</span>
      ))}
    </div>
    <a href={`/blog/${slug}`} class="blog-card-link">
      Read more â†’
    </a>
  </div>
</article>

<style>
  .blog-card {
    background-color: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 0.5rem;
    padding: 1.5rem;
    transition: all 0.3s ease;
    position: relative;
  }

  .blog-card:hover {
    border-color: var(--accent-color);
    transform: translateY(-2px);
    box-shadow: 0 4px 20px var(--accent-glow);
  }

  .blog-card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
    gap: 1rem;
    position: relative;
    min-height: 1.5rem;
  }

  .blog-card-meta {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.25rem;
    flex-shrink: 0;
  }

  .blog-card-date {
    font-size: 0.9rem;
    color: var(--text-muted);
    white-space: nowrap;
    font-family: 'Fira Code', monospace;
    font-weight: 400;
  }

  .blog-card-reading-time {
    font-size: 0.8rem;
    color: var(--text-muted);
    font-family: 'Fira Code', monospace;
    font-weight: 300;
    white-space: nowrap;
  }

  .blog-card-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0;
    flex: 1;
    min-width: 0;
    overflow-wrap: break-word;
    color: var(--text-primary);
  }

  .blog-card-title a {
    border: none;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
    min-width: 0;
    color: var(--text-primary);
  }

  .blog-card-title a:hover {
    color: var(--accent-color);
  }

  .protected-icon {
    font-size: 0.8em;
    opacity: 0.7;
  }

  .blog-card-description {
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .blog-card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  .blog-card-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    flex: 1;
  }

  .blog-card-tag {
    background-color: var(--accent-hover);
    color: var(--text-secondary);
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.8rem;
    font-family: 'Fira Code', monospace;
    border: 1px solid var(--border-color);
  }

  .blog-card-link {
    font-weight: 500;
    color: var(--accent-color);
    border: none;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .blog-card-link:hover {
    color: var(--text-primary);
    background-color: var(--accent-hover);
    padding: 2px 4px;
    border-radius: 3px;
  }

  @media (max-width: 768px) {
    .blog-card-header {
      flex-direction: column;
      gap: 0.5rem;
    }

    .blog-card-date {
      align-self: flex-start;
    }

    .blog-card-meta {
      align-items: flex-start;
    }

    .blog-card-footer {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .blog-card-tags {
      order: 2;
    }

    .blog-card-link {
      order: 1;
      align-self: flex-end;
    }
  }
</style>